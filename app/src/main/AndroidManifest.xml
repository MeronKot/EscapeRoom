<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dell.escaperoom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_esc_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Room"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ChemistryChallenge"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LampChallenge"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SimonSaysActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PuzzleActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".HintActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FindDiffPicActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".RecordsActivity" />
        <activity
            android:name=".Database.WinActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="landscape" />
        <activity android:name=".InstructionActivity"></activity>
    </application>

</manifest>