<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context="com.example.dell.escaperoom.SimonSaysActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:background="@drawable/ic_blue_button"
            android:layout_weight="1"
            android:id="@+id/blue" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:background="@drawable/ic_green_button"
            android:layout_weight="1"
            android:id="@+id/green"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/ic_red_button"
            android:id="@+id/red"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:background="@drawable/ic_yellow_button"
            android:layout_weight="1"
            android:id="@+id/yellow"/>
    </LinearLayout>
</LinearLayout>
